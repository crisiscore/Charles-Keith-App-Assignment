<?xml version="1.0" encoding="utf-8"?>
<xyz.imei.charleskeithapp.viewpods.ColoursViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/vp_slide"
    android:background="@android:color/transparent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_product_colours"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimary"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/margin_medium_2"
        android:paddingEnd="@dimen/margin_large"
        android:paddingStart="@dimen/margin_large"
        android:paddingTop="@dimen/margin_medium_2" />

    <TextView
        android:id="@+id/tv_colour_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-30dp"
        android:layout_marginTop="@dimen/margin_colour"
        android:layout_toStartOf="@+id/rv_product_colours"
        android:background="@color/colorAccent"
        android:paddingBottom="@dimen/margin_medium"
        android:paddingEnd="@dimen/margin_medium_2"
        android:paddingStart="@dimen/margin_medium_2"
        android:paddingTop="@dimen/margin_medium"
        android:rotation="270"
        android:text="@string/colours"
        android:textAllCaps="true"
        android:textColor="@android:color/white" />

</xyz.imei.charleskeithapp.viewpods.ColoursViewPod>